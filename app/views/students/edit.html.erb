<h2>Update Student Form:</h2>

<div>
  <%= form_for @student do |f| %>
  <%= f.label :first_name, "First name: " %>
  <%= f.text_field :first_name, placeholder: @student.first_name %>
  <br>
  <%= f.label :last_name, "Last name: " %>
  <%= f.text_field :last_name, placeholder: @student.last_name %>
  <br>
  <%= f.submit "Update Student" %>
  <% end %>
</div>
